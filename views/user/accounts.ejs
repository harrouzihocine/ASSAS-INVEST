<!-- Button trigger modal -->
<button
  type="button"
  class="btn btn-secondary  px-2 py-1"
  data-bs-toggle="modal"
  data-bs-target="#accounts-<%= user.id %>"
>
<i class="bi bi-file-text"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="accounts-<%= user.id %>"
    data-bs-keyboard="true"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">حسابات الدفع</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
       <p class="text-start lh-base"> <%=user.fullname%></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-lightCoral bg-gradient" data-bs-dismiss="modal">
          إغلاق
        </button>
      </div>
    </div>
  </div>
</div>