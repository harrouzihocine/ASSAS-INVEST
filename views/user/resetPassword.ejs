<% layout('layouts/boilerplate')%>
<div
  class="vh-100 d-flex justify-content-center align-items-center"
  id="login-box"
>
  <div class="p-5 shadow-sm border rounded-3">
    <div class="d-flex justify-content-center align-items-center pb-5">
      <div class="">
        <img src="/assets/media/logo.png" alt="mdo" width="80" height="60" />
      </div>
      <div class="">
        <a class="navbar-brand m-0" href="#"
          ><h1 class="text-success">أســاس للإستثمار</h1></a
        >
      </div>
    </div>

    <form
      class="row g-3 needs-validation"
      action="/user/reset-password/<%=token%>"
      id="personal"
      method="POST"
      novalidate
      style="direction: rtl"
    >
      <div class="mb-3">
        <label for="email" class="form-label">بريد الإلكتروني</label>
        <input
          type="email"
          name="email"
          class="form-control border border-success"
          id="email"
          value="<%= email %>"
          required
          readonly
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">كلمة المرور</label>
        <input
          name="password"
          type="password"
          class="form-control border border-success"
          id="password"
          data-rule-password="true"
          required
        />
      </div>
      <div class="mb-3">
        <label for="confirmPassword" class="form-label"
          >تأكبد كلمة المرور</label
        >
        <input
          name="confirmPassword"
          type="password"
          class="form-control border border-success"
          id="confirmPassword"
          data-rule-password="true"
          data-rule-equalTo="#password"
        />
      </div>
      <div class="d-grid">
        <button class="btn btn-success px-3 py-2" type="submit">إرسال</button>
      </div>
    </form>
  </div>
</div>
