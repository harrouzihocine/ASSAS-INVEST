<% layout('layouts/boilerplate')%>
<div class="card border-0 profile-page">
  <img
    class="cover-profile"
    src="https://picsum.photos/seed/picsum/800/600?grayscale"
    alt="cover"
    height="500"
  />
  <div class="container">
    <div class="d-flex flex-column justify-content-center align-items-center">
      <img
        class="photo"
        src="https://ui-avatars.com/api/?name=<%= user.firstname%>&background=random&color=000000&size=200&font-size=0.5&rounded=true&bold=true"
      />
      <div class="mt-2">
        <h1 class="fw-bold text-greenSea"><%= user.fullname %></h1>
      </div>
    </div>

    <div class="row gy-5 my-3">
      <div class="row" >
        <div class="col-12 col-md-12 col-lg-6  mt-2 fw-3">
          <p>
            <span class="fs-4 fw-bold me-3">الإسم:</span>
            <span class="fs-4"><%=user.firstname%></span>
          </p>
          <p>
            <span class="fs-4 fw-bold me-3">اللقب:</span
            ><span class="fs-4"><%=user.lastname%></span>
          </p>
          <p>
            <span class="fs-4 fw-bold me-3">الإيمل:</span
            ><span class="fs-4"><%=user.email%></span>
          </p>
          <p>
            <span class="fs-4 fw-bold me-3">الهاتف:</span
            ><span class="fs-4"><%=user.phone%></span>
          </p>
          <p>
            <span class="fs-4 fw-bold me-3">الجنس:</span
            ><span class="fs-4"><%=user.gender%></span>
          </p>
          <p>
            <span class="fs-4 fw-bold me-3">العنوان:</span
            ><span class="fs-4"><%=user.address%></span>
          </p>
          <p>
            <span class="fs-4 fw-bold me-3">الدور:</span
            ><span class="fs-4"><%=user.role%></span>
          </p>
        </div>
        <div class="col-12 col-md-12 col-lg-6 align-self-center">
          <div class="d-flex justify-content-center align-items-center ">
            <div class="mt-3">
              <% if(!currentUser) {%> <% }else { %>
              <!-- if there is a loggedIn -->
              <% if(user.id != currentUser._id) {%> <% } else {%> <%-
              include("./editPassword")%> <% } %> <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 