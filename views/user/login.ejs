<% layout('layouts/boilerplate')%>
<div
  class="vh-100 d-flex justify-content-center align-items-center"
  id="login-box"
>
  <div class="p-5 shadow-sm border rounded-3">
    <div class="d-flex justify-content-center align-items-center pb-5">
      <div class="">
        <img src="/assets/media/logo.png" alt="mdo" width="80" height="60" />
      </div>
      <div class="">
        <a class="navbar-brand m-0" href="#"
          ><h1 class="text-success">أســاس للإستثمار</h1></a
        >
      </div>
    </div>

    <form
      class="row g-3 needs-validation"
      action="/user/login"
      id="personal"
      method="POST"
      novalidate
      style="direction: rtl"
    >
      <div class="form-floating input-group mb-3">
        <input
          type="email"
          name="username"
          class="form-control border border-success"
          id="username"
          aria-describedby="emailHelp"
          required
        />
        <label for="username" class="form-label">بريد الإلكتروني</label>
        <div class="valid-feedback">BIEN</div>
      </div>
      <div class="form-floating input-group mb-3">
        <input
          name="password"
          type="password"
          class="form-control border border-success"
          id="loginPassword"
          required
        />
        <label for="password" class="form-label">كلمة المرور</label>
        <div class="valid-feedback">BIEN</div>
        <div class="input-group-text border border-success">
          <span id="show_hide_login">
            <i id="icon-eye" class="bi bi-eye-fill"></i>
          </span>
        </div>
      </div>

      <div class="d-grid">
        <button class="btn btn-success px-3 py-2" type="submit">
          تسجيل الدخول
        </button>
      </div>
    </form>
    <a href="/user/reset-password">هل نسيت كلمة المرور ؟</a>
  </div>
</div>
