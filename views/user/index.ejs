<% layout('layouts/boilerplate')%>
<h1 class="display-6 text-success text-center mb-3">سجل المستثمرين</h1>
<form class="d-flex shadow-sm mx-5" >
  <input
    id="search"
    class="form-control mb-2"
    type="search"
    placeholder="خانة البحث"
    aria-label="Search"
  />
</form>
<div class="table-responsive shadow-sm mx-5">
  <table
    class="table table-striped table-hover table-borderless text-center sortable"
  >
    <thead class="table-greenSea">
      <tr>
        <th scope="col">الرقم</th>
        <th scope="col">الإسم و اللقب</th>
        <th scope="col">تاريخ الميلاد</th>
        <th scope="col">الهاتف</th>
        <th scope="col"> الدور</th>
        <th scope="col"> العنوان</th>
        <th scope="col">الجنس</th>
        <th scope="col"> الحسابات</th>
        <th scope="col"> العمليات</th>

      </tr>
    </thead>
    <tbody id="tablebody">
      <% var i=1 %> 
      <% for (user of users){%>
      <tr>
        <th 
          
          scope="row" scope="row"><%= i%> <% i=i+1; %></th>
        <td
          
          scope="row" ><%= user.fullname%></td>
        <td
          
          scope="row"><%=user.birthdate %></td>
          <td
          
          scope="row" ><%= user.phone %></td>
          <td
          
          scope="row" ><%= user.role %></td>
          <td
          
          scope="row" ><%= user.adress %></td>
          <td
          
          scope="row" ><%= user.gender %></td>
          <td
          
          scope="row" ><%-include("./accounts")%>
        </td>
        
       
        <td>
          <%-include("./edit")%>
          <%- include("./delete") %>
        </td>
      </tr>
      <%}%>
    </tbody>
  </table>
</div>
