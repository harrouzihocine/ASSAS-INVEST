<% layout('layouts/boilerplate')%>

<article class="postcard light green headline my-3">
  
    <img
      class="postcard__img"
      src="/assets/<%= announcement.picture %>"
      alt=""
    />
   
  <div class="postcard__text t-dark">
    <h1 class="postcard__title fs-2 text-tealdeer text-center"><%= announcement.title %> <%- include("./delete")%></h1>
    <div class="postcard__subtitle small">
      <time datetime="2020-05-25 12:00:00">
        <i class="fas fa-calendar-alt mr-2"></i>
        <%=moment(announcement.date).format("l") %>
      </time>
    </div>
    <div class="postcard__bar"></div>
    <div class="text-muted mb-3" style="white-space: pre-wrap">
      <%= announcement.resume %>
    </div>
    <div class=" " style="white-space: pre-wrap"><%= announcement.description %></div>
  </div>
</article>