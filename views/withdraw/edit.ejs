<% layout('layouts/boilerplate')%>
<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-warning bg-gradient px-2 py-1" data-bs-toggle="modal"
  data-bs-target="#uwithdraw-<%= withdraw.id %>">
  <i class="bi bi-pencil-fill"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="uwithdraw-<%= withdraw.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">تعديل سحب</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% if (withdraw.state =="قيد الإنتظار"){ %>
        <form class="row p-2 needs-validation" action="/withdraw/<%=caisse.id%>/<%=withdraw.id%>/?_method=PUT" method="POST">

          <div class="form-floating mb-2 col-6">
            <input class="form-control border border-success" type="date" id="startDate" name="withdraw[date]"
              placeholder="date" value="<%=moment(withdraw.date).format("YYYY-MM-DD")%>" required />
            <label for="startDate" class="form-labelfs-6">تاريخ السحب:</label>
            <div class="valid-feedback">صحيح</div>
          </div>
          <div class="form-floating mb-2 col-6">
            <input class="form-control border border-success" type="number" id="Amount" min="1" max="<%=caisse.restCase + withdraw.amount%>"
              name="withdraw[amount]" value="<%= withdraw.amount %>"  required />
            <label for="initAmount" class="form-labelfs-6">المبلغ:</label>
            <div class="valid-feedback">صحيح</div>
          </div>
          <div class="mb-2">
            <textarea
              class="form-control border border-success"
              type="text"
              id="description"
              name="withdraw[description]"
              placeholder="تفاصيل السحب"
             
              rows="4"
              required
            > <%= withdraw.description %></textarea>
            <div class="valid-feedback">صحيح</div>
          </div>


          <div class="modal-footer">
            <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">
              إلغاء
            </button>
            <button class="btn btn-outline-warning">تعديل</button>
          </div>
        </form>
        <% }else{ %>
          <div class="d-flex justify-content-start align-items-center">
            <img
              class=""
              height="30"
              width="30"
              src="/assets/close.png"
              alt="close"
            />
            <p class="mt-3 ms-2">إلغاء دفع مبلغ  <%=withdraw.amount.toLocaleString('de-DE', { minimumFractionDigits: 2 }) %> دج %></p>
          </div>
          <form
            class=""
            id="delete-form"
            action="/withdraw/<%=caisse.id%>/<%=withdraw.id%>/?_method=PUT&confirmed=0"
            method="POST"
          >
            <div class="modal-footer mt-4">
              <button
                type="button"
                class="btn btn-outline-secondary bg-gradient"
                data-bs-dismiss="modal"
              >
                إلغاء
              </button>
              <button class="btn btn-outline-danger bg-gradient">تأكيد</button>
            </div>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</div>