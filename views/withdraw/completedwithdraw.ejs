<button
  type="button"
  class="btn btn-outline-greenSea bg-gradient px-2 py-1"
  data-bs-toggle="modal"
  data-bs-target="#cwithdraw-<%= withdraw.id %>"
>
<i class="bi bi-check-circle"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="cwithdraw-<%= withdraw.id %>"
  data-bs-keyboard="true"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">
         تأكيد الدفع لمرجع :<%=withdraw.reference %>
        </h5>

        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <div class="d-flex justify-content-start align-items-center">
          <img
            class=""
            height="30"
            width="30"
            src="/assets/confirmed.png"
            alt="confirmed"
          />
          <p class="mt-3 ms-2">تأكيد دفع مبلغ  <%=withdraw.amount.toLocaleString('de-DE', { minimumFractionDigits: 2 }) %> دج %></p>
        </div>
        <form
          class=""
          id="delete-form"
          action="/withdraw/<%=caisse.id%>/<%=withdraw.id%>/?_method=PUT&confirmed=1"
          method="POST"
        >
          <div class="modal-footer mt-4">
            <button
              type="button"
              class="btn btn-outline-secondary bg-gradient"
              data-bs-dismiss="modal"
            >
              إلغاء
            </button>
            <button class="btn btn-outline-greenSea bg-gradient">تأكيد</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>