<% layout('layouts/boilerplate')%>

<!-- ---------------------------------------------- -->
<div class="container-fluid mt-4">
  <div class="mb-5">
    <h3 class="display-6 text-center text-success">باقاتي المفعلة</h3>
  </div>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    <% for (caisse of caisses){%>

    <div class="col-12 mb-3">
      <div class="card h-100 bg-lotion">

        <div class="card-body">
          <h5 class="card-title text-center text-poseidon fs-3">
            <%= caisse.pack.title %>
          </h5>
          <p class="card-text">
          
          <div class="d-flex">
            <div class="me-5">
              <p><b>رقم المرجع :</b></p>
              <b>مبلغ الاستثمار :</b></p>
              <p><b>المدة الاستثمار :</b></p>
              <p><b>المدة المتبقية بالأيام :</b></p>
              <p><b>حالة الباقة :</b></p>
              <p><b>العائدات :</b></p>
              <p> <b>الوصف :</b></p>
            </div>
            <div>
              <p>
                <%= caisse.reference %>
              </p>
              <p>
                <%= caisse.initAmount.toLocaleString('de-DE', { minimumFractionDigits: 2 })%> دج
              </p>
              <p>
                <%= caisse.pack.period %>
                <%= caisse.pack.unite %>
              </p>
              <p>
                <%= caisse.restDays %> يوم
              </p>
              <p>
                <%= caisse.state %>
              </p>
              <p>
                <%= caisse.profit.toLocaleString('de-DE', { minimumFractionDigits: 2 }) %> دج
              </p>
              <p>
                <%= caisse.pack.description %>
              </p>
            </div>
          </div>
          <a href="/withdraw/<%=caisse.id%>"><div class=" py-2 bg-poseidon  text-center text-white rounded-4 fs-5"> السحوبات</div></a>
          </p>
         
        </div>
        <div class="card-footer">
          <small class="text-muted"> تم إنشاءه يوم: <%=moment(caisse.startDate).format("YYYY-MM-DD")%>
          </small>
        </div>
      </div>
    </div>
    <% }%>
  </div>
</div>