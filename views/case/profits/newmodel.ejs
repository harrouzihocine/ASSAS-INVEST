<!-- Button trigger modal -->
<button
  type="button"
  class="btn btn-outline-greenSea bg-gradient px-2 py-1 me-2"
  data-bs-toggle="modal"
  data-bs-target="#ncaisse-<%= caisse.id %>"
>
  <i class="bi bi-currency-dollar"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="ncaisse-<%= caisse.id %>"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">إعلان أرباح</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form class="row p-2 needs-validation" action="/profits" method="POST">
          <div class="form-floating col-12 mb-3">
            <select
              id="profitsId"
              name="caisse[profitsId]"
              class="form-select border border-success"
            >
              <option selected class="option" value="<%= caisse.id%>">
                <%= caisse.reference%> <%= caisse.user.fullname%> <%=
                caisse.initAmount%>
              </option>
            </select>
            <label for="profitsId" class="form-label">رقم المرجع</label>
            <div class="valid-feedback">صحيح</div>
          </div>

          <div class="form-floating mb-3">
            <input
              class="form-control border border-success"
              type="number"
              id="Amount"
              name="caisse[amount]"
              placeholder="العائدات"
              required
            />
            <label for="initAmount" class="form-labelfs-6">العائدات:</label>
            <div class="valid-feedback">صحيح</div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-outline-danger"
              data-bs-dismiss="modal"
            >
              إلغاء
            </button>
            <button class="btn btn-outline-success">تأكيد</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
