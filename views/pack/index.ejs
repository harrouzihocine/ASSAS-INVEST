<% layout('layouts/boilerplate')%>
<form class="d-flex shadow-sm mx-5 mt-5" >
  <input
    id="search"
    class="form-control mb-2"
    type="search"
    placeholder="خانة البحث"
    aria-label="Search"
  />
</form>
<div class="table-responsive shadow-sm mx-5">
  <table
    class="table table-striped table-hover table-borderless text-center sortable"
  >
    <thead class="table-greenSea">
      <tr>
        <th scope="col">الرقم</th>
        <th scope="col">اسم الباقة</th>
        <th scope="col">المدة</th>
        <th scope="col">الوصف</th>
        <th scope="col"> الحالة</th>
       
        <th id="hide" scope="col">Action</th>
      </tr>
    </thead>
    <tbody id="tablebody">
      <% var i=1 %> 
      <% for (pack of packs){%>
      <tr>
        <th 
          
          scope="row" scope="row"><%= i%> <% i=i+1; %></th>
        <td
          
          scope="row" ><%= pack.title%></td>
        <td
          
          scope="row"><%=pack.period %> <%=pack.unite %></td>
          <td
          
          scope="row" ><%= pack.description %></td>
          <% if(pack.state == true){ %>
        <td scope="row">مفعل</td>
        <% }else{ %>
        <td scope="row">غير مفعل</td>
        <% } %>
        
       
        <th>
         add
         
        </th>
      </tr>
      <%}%>
    </tbody>
  </table>
</div>
