<% layout('layouts/boilerplate')%>
<div class="container py-3">
  <div class="p-3 mb-3 mx-auto text-center">
    <h2 class="display-4 ">سجل الباقات </h2>
  </div>

  <div class="d-flex flex-row text-center">
    <% for (let pack of packs) {%>
    <div class="col ">
      <div class="card mb-4 rounded-3 shadow-sm w-75 p-3">
        <div class=" p-2 mb-3 bg-pistachio rounded-3  border border-success">
          <h4 class="my-0 fw-normal text-tealdeer"><%= pack.title %></h4>
        </div>
        <div class=" p-2 mb-3 bg-menthol rounded-3 border border-warning">
          <h4 class="my-0 fw-normal text-citrine"><%= pack.period %> <%= pack.unite %></h4>
        </div>
        <div class=" p-2 mb-3  rounded-3 border ">
          <h4 class="my-0 fw-normal "><%= pack.description %></h4>
        </div>
        
      </div>
    </div>
    <% } %>
  </div>
</div>
